        <Grid.RowDefinitions>
            <RowDefinition Height="202*"/>
            <RowDefinition Height="471*"/>
        </Grid.RowDefinitions>
        <Rectangle Height="672" VerticalAlignment="Top" Margin="0,0,-14,0" Grid.RowSpan="2">
