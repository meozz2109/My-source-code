                </StackPanel>
            </Border>
        </StackPanel>
        <TextBlock Text=" Mã NV:" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="35,0,654,350" Foreground="Black" Cursor="Hand" Width="105" Height="23"/>
        <TextBlock Text=" Tên NV:"  FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="35,0,654,298" Foreground="Black" Cursor="Hand" Width="105" Height="24"/>
        <TextBlock Text=" Giới tính:" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="35,0,655,245" Foreground="Black" Cursor="Hand" Width="104" Height="24"/>
        <Rectangle Margin="418,10,10,121" RadiusY="10" RadiusX="10" Fill="#FFE0D4C5">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="15" Direction="0" RenderingBias="Quality" ShadowDepth="1" Color="#FFBBBBBB"/>
            </Rectangle.Effect>
        </Rectangle>
        <TextBlock Text=" Địa chỉ:" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="434,0,256,350" Foreground="Black" Cursor="Hand" Width="104" Height="23"/>
        <TextBlock Text=" Số CMT:"  FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="433,0,256,298" Foreground="Black" Cursor="Hand" Width="105" Height="24"/>
        <StackPanel VerticalAlignment="Bottom" Margin="0,0,10,121" Height="271" HorizontalAlignment="Right" Width="387">
            <TextBox x:Name="TxtBoxAddress" Margin="182,10,29,10"  FontFamily="Champagne &amp; Limousines" FontSize="18" Height="30"/>
            <TextBox x:Name="TxtBoxSoCMT" Margin="182,10,29,10"   FontFamily="Champagne &amp; Limousines" FontSize="18" Height="28"/>
            <TextBox x:Name="TxtBoxMaTKNH" Margin="182,10,29,10"   FontFamily="Champagne &amp; Limousines" FontSize="18" Height="32"/>
            <TextBox x:Name="TxtBoxRole" Margin="182,10,29,10"   FontFamily="Champagne &amp; Limousines" FontSize="18" Height="29"/>
            <TextBox x:Name="TxtBoxLuongTheoGio" Margin="182,10,29,10"   FontFamily="Champagne &amp; Limousines" FontSize="18" Height="31"/>
        </StackPanel>
        <TextBlock Text=" Mã TKNN:" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="433,0,257,250" Foreground="Black" Cursor="Hand" Width="104" Height="24"/>
        <TextBlock Text=" Ngày sinh:" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="35,0,655,200" Foreground="Black" Cursor="Hand" Width="104" Height="24"/>
        <TextBlock Text=" Số ĐT:" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="35,0,655,149" Foreground="Black" Cursor="Hand" Width="104" Height="24"/>
        <TextBlock Text=" Chức vụ:" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="432,0,257,205" Foreground="Black" Cursor="Hand" Width="105" Height="23"/>
        <TextBlock Text=" Lương theo giờ:" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="432,0,221,154" Foreground="Black" Cursor="Hand" Width="141" Height="23"/>
    </Grid>
</Window>
